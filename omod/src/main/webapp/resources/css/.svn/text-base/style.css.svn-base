/*--------------------------*/
/*       B U T T O N S      */
/*--------------------------*/


.app_info  {
	
	color:#515151;
	border-top:1px solid #ededed;
	border-left:1px solid #ccc;
	border-right:1px solid #ccc;
	border-bottom:1px solid #b7b7b7;
	text-shadow:0px 1px 0px #fff;
	box-shadow:0px 1px 2px #515151;
	-moz-box-shadow:0px 1px 2px #515151;
	-webkit-box-shadow:0px 1px 2px #515151;
      text-align:center;
}


.grey_button:active, .app_info a:active {
	background-image: -moz-linear-gradient(top, #bebebe, #d1d2d4);
	background-image: -webkit-gradient(linear, center top, center bottom, from(#bebebe), to(#d1d2d4));
	background-image: -o-linear-gradient(top, #bebebe, #d1d2d4);
	
	background-image: linear-gradient(top, #bebebe, #d1d2d4);
	  text-align:center;
	  text-decoration:none;
}



