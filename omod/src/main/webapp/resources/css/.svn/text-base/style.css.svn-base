#apps_page_tools {
	
	/*background-color:#eef0f1;*/
	padding-bottom:25px;
}



#apps_container {
	width:1000px;
	margin:0 auto;
}


.app {
	float:left;
	width:460px;
	margin-bottom:35px;
}


.app_icon {
	float:left;
	margin-right:15px;
}


.app_name h3 {
	font-family: 'Lato', sans-serif;
	/*font-size:22px;*/
	color:#333;
	margin-bottom:5px;
	text-shadow:0px 1px 0px #fff;
}


.app_description p {
	/*font-size:15px;*/
	line-height:28px;
	text-shadow:0px 1px 0px #fff;
}

.app_description a {
	color:#0477d8;
	font-weight:bold;
}






.app_launch a, .app_info a {
    color:#1aac9b;
	width:140px;
	padding-top:10px;
	padding-bottom:10px;
	display:block;
	
	/*font-size:14px;*/
	font-weight:bold;
}

.app_launch {
	float:left;
	margin-right:15px;
	margin-left:150px;
}

.app_launch a:active {
	border-top:1px solid #007500;
	border-left:1px solid #007500;
	border-right:1px solid #007500;
	border-bottom:1px solid #007500;
}

.app_info {
	float:left;
}

#apps_holder {
	padding-bottom:50px;
}



.app_divider {
	
	width:1000px;
	height:45px;
	margin-bottom:25px;
}

.app_line {
	
	width:3px;
	height:210px;
	float:left;
	margin-left:35px;
	margin-right:35px;
}